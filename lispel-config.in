#!/bin/sh

tool_libs="liblscript.la"
app_libs="liblscript.la"

prefix=@prefix@
exec_prefix=@exec_prefix@

usage()
{
    cat <<EOF
Usage: neurokit-config [OPTIONS] [LIBRARIES]
Options:
    [--prefix[=DIR]]
    [--exec-prefix[=DIR]]
    [--version]
    [--libs]
    [--cflags]
Libraries:
    tool
    gui
EOF

    exit $1
}

if test $# -eq 0; then
    usage 1 1>&2
fi
